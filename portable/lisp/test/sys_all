echo "------------SYSTEM TEST-------------------"
sh sys_test "\"\xFFF\"" "get_string: invalid symbol code"

echo "---Тесты ATOM---"
sh sys_test "(atom 'a)" "T"
sh sys_test "(atom 10)" "T"
sh sys_test "(atom '(a b c))" "NIL"
sh sys_test "(atom '())" "T"
sh sys_test "(atom (atom 'a))" "T"
sh sys_test "(atom '(atom 'a))" "NIL"
sh sys_test "(atom )" "atom: no args"
sh sys_test "(atom 'a 'd)" "atom: many args"

echo "---Тесты QUOTE---"
sh sys_test "'a" "A"
sh sys_test "'()" "NIL"
sh sys_test "(quote())" "NIL"

echo "---Тесты BACKQUOTE---"
sh sys_test "(setq y 3)
   	    	  \`(x ,y \`(a ,b))" "3
(X 3 (BACKQUOTE (A (COMMA B))))"
sh sys_test "(setq abc '(a b c))
(setq a 9)
\`(1 (comma-at abc) ((comma a)) \"a\" #(1 (comma a) 2))" "(A B C)
9
(1 A B C (9) \"a\" #(1 9 2))"


sh sys_test "((lambda (x y) (cons x y)) 1 '(2))" "(1 2)"
sh sys_test "(defun null (x) (eq x (quote())))\
(null 'a) (null (quote ())) (null '())" "NULL
NIL
T
T"
